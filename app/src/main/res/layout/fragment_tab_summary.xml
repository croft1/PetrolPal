<?xml version="1.0" encoding="utf-8"?>


<android.support.design.widget.CoordinatorLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/summaryLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/background_light"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="208dp"
                android:background="@color/common_action_bar_splitter">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="match_parent"
                    android:id="@+id/trafficLight"
                    android:contentDescription="Buy or wait indicator"
                    android:src="@drawable/go"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/aveDayPrice"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="40dp"
                    tools:targetApi="jelly_bean_mr1"
                    android:layout_marginLeft="17dp"
                    android:layout_marginStart="17dp"
                    android:text="@string/loading_text"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="21dp" />



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:id="@+id/lastFillUp"
                    android:textColor="@color/material_grey_800"
                    android:text="235235235"
                    android:padding="5dp"
                    android:layout_above="@+id/highDayPrice"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:id="@+id/lowDayPrice"
                    android:textColor="@color/material_grey_800"
                    android:text="234234234"
                    android:padding="5dp"
                    android:layout_above="@+id/lastFillUp"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:id="@+id/highDayPrice"
                    android:textColor="@color/material_grey_800"
                    android:text="234234234"
                    android:padding="5dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="25dp" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/viewB"
            android:layout_width="match_parent"
            android:layout_height="415dp"
            android:orientation="horizontal">

            <ListView
                android:layout_width="wrap_content"
                android:layout_height="405dp"
                android:id="@+id/summaryFuelList" />
        </LinearLayout>

    </LinearLayout>



</android.support.design.widget.CoordinatorLayout>

